{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "noPrivate": true,
      "message": "chore: publish %s"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  },
  "ignoreChanges": ["**/*.md"],
  "version": "independent"
}
